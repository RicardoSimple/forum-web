<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ricardo.web.dao.MessageDAO">
    <resultMap id="MessageResultMap" type="com.ricardo.web.dto.MessageDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="user_id" property="userId"/>
        <result column="user_type" property="userType"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="insertMessage" parameterType="com.ricardo.web.dto.MessageDO">
        INSERT INTO message (name, user_id, user_type, title, content,gmt_created,gmt_modified)
        VALUES (#{name}, #{userId}, #{userType}, #{title}, #{content},now(),now())
    </insert>

    <update id="updateMessage" parameterType="com.ricardo.web.dto.MessageDO">
        UPDATE message
        SET name = #{name}, user_id = #{userId}, user_type = #{userType}, title = #{title}, content = #{content},gmt_modified = now()
        WHERE id = #{id}
    </update>

    <select id="findMessageById" parameterType="long" resultType="com.ricardo.web.dto.MessageDO">
        SELECT * FROM message
        WHERE id = #{id}
    </select>

    <select id="findMessageByUserIdAndType" parameterType="com.ricardo.web.dto.MessageDO" resultType="java.util.List">
        SELECT * FROM message
        WHERE user_id = #{userId} and user_type = #{userType}
    </select>

    <delete id="deleteMessage" parameterType="long">
        DELETE FROM message
        WHERE id = #{id}
    </delete>

</mapper>
